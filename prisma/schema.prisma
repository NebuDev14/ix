// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model ExamplePerson {
  id    String        @id @default(cuid())
  name  String
  email String
  posts ExamplePost[]
  role  Role          @default(COMPETITOR)
}

model ExamplePost {
  id       String        @id
  posterId String
  name     String
  content  String
  likes    Int
  poster   ExamplePerson @relation(fields: [posterId], references: [id])
}

model User {
  id           String      @id @default(cuid())
  name         String
  email        String
  osis         String
  submissionId String?
  submission   Submission? @relation(fields: [submissionId], references: [id])
  role         Role        @default(COMPETITOR)
  experience   Experience
}

model Submission {
  id          String   @id @default(cuid())
  title       String
  description String
  media       String[]
  members     User[]
  tracks      Track[]  @default([GENERAL])
}

enum Track {
  GENERAL
  BEGINNER
  SPONSOR_PENDING
}

enum Experience {
  BEGINNER
  INTERMEDIATE
  ADVANCED
}

enum Role {
  COMPETITOR
  ADMIN
}
